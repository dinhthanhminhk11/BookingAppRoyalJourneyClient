<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_10dp"
    android:layout_marginTop="@dimen/_10dp">

    <com.example.librarycireleimage.CircleImageView
        android:id="@+id/imgUserFeedback"
        android:layout_width="@dimen/_42dp"
        android:layout_height="@dimen/_42dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/_10dp"/>

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:alpha="0.9"
        android:textColor="@color/black"
        android:textSize="@dimen/_16sp"
        app:layout_constraintStart_toEndOf="@+id/imgUserFeedback"
        app:layout_constraintTop_toTopOf="@+id/imgUserFeedback" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="@dimen/_80dp"
        android:layout_height="@dimen/_15dp"
        android:layout_marginStart="@dimen/_15dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/imgUserFeedback"
        app:layout_constraintStart_toEndOf="@+id/imgUserFeedback"
        app:layout_constraintTop_toBottomOf="@+id/tvName">

        <ImageView
            android:id="@+id/imgStar1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_star_no_click" />

        <ImageView
            android:id="@+id/imgStar2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_star_no_click" />

        <ImageView
            android:id="@+id/imgStar3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_star_no_click" />

        <ImageView
            android:id="@+id/imgStar4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_star_no_click" />

        <ImageView
            android:id="@+id/imgStar5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_star_no_click" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="@dimen/_20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvFeedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/_15dp"
        android:layout_marginEnd="@dimen/_13dp"
        android:textSize="@dimen/_14sp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/black"
        android:alpha="0.7"
        android:layout_marginTop="@dimen/_20dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>