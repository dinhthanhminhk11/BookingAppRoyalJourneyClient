<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/contentBackground"
    android:background="@color/white"
    tools:context=".ui.activity.DetailProductActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_120dp"
        android:layout_centerInParent="true"
        android:background="@null"
        android:backgroundTint="@null"
        android:backgroundTintMode="@null"
        app:lottie_autoPlay="true"
        app:lottie_fileName="loadingver2222.json"
        app:lottie_loop="true" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/_10dp"
        android:overScrollMode="never"
        android:scrollbars="none"
        tools:layout_editor_absoluteX="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/contenTOp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_319dp"
                android:layout_marginTop="@dimen/_10dp"
                app:cardCornerRadius="@dimen/_20dp"
                app:cardElevation="@dimen/_0dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <include layout="@layout/tool_bar" />

                    <ImageView
                        android:id="@+id/ivimgHotel"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="@dimen/_20dp"
                        android:layout_marginBottom="@dimen/_16dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvNameHotel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"

                            android:textColor="@color/white"
                            android:textSize="@dimen/_20dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8dp"
                            android:fontFamily="@font/poppins_medium"

                            android:textColor="@color/white"
                            android:textSize="@dimen/_12dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_bedroom_detailproduct" />

                                <TextView
                                    android:id="@+id/tvAmountBedRoom"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/_8dp"
                                    android:fontFamily="@font/poppins_medium"

                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_12dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_bathroom_detailproduct" />

                                <TextView
                                    android:id="@+id/tvAmountBedroom2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/_8dp"
                                    android:fontFamily="@font/poppins_medium"

                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_12dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </FrameLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/contenTOp"
                android:layout_marginTop="-3dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titleMota"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20dp"
                    android:layout_marginBottom="@dimen/_14dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/motadetail"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_14dp">

                    <ImageView
                        android:id="@+id/imgStar1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:src="@drawable/ic_star_detailproduct" />

                    <TextView
                        android:id="@+id/tvSao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_10dp"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="#0A8ED9"
                        android:textSize="@dimen/_18dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_10dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/danhgiadetail"
                        android:textColor="#0A8ED9"
                        android:textSize="@dimen/_18dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/ContentHouse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_18dp"
                    android:orientation="horizontal">

                    <com.example.librarycireleimage.CircleImageView
                        android:id="@+id/imgManage"
                        android:layout_width="@dimen/_40dp"
                        android:layout_height="@dimen/_40dp"
                        android:layout_gravity="center" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_16sp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/NameManage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_4dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="@string/owner_detail"
                            android:textColor="@color/color_858585"
                            android:textSize="@dimen/_12sp" />
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/btPhone"
                        android:layout_width="@dimen/_35dp"
                        android:layout_height="@dimen/_35dp"
                        android:layout_below="@+id/btnFiler"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:background="@drawable/background_button_call_detailproduct"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:src="@drawable/ic_phone_detaiproduct"
                        android:textAllCaps="false"
                        app:backgroundTint="@null" />

                    <ImageButton
                        android:id="@+id/btMesseger"
                        android:layout_width="@dimen/_35dp"
                        android:layout_height="@dimen/_35dp"
                        android:layout_below="@+id/btnFiler"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_10dp"
                        android:background="@drawable/background_button_call_detailproduct"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:src="@drawable/ic_message_detaiproduct"
                        android:textAllCaps="false"
                        app:backgroundTint="@null" />

                </LinearLayout>


                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16dp"
                    android:layout_marginBottom="@dimen/_10dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/phongdetail"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcvRoom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16dp"
                    android:layout_marginBottom="@dimen/_10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/phongtamdetail"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16sp" />

                    <TextView
                        android:id="@+id/showMorebathdroom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:text="@string/see_more"
                        android:textColor="#0A8ED9"
                        android:textSize="@dimen/_16sp" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcvBathdRoom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16dp"
                    android:layout_marginBottom="@dimen/_10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/tienichdetail"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16sp" />

                    <TextView
                        android:id="@+id/showMore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:text="@string/see_more"
                        android:textColor="#0A8ED9"
                        android:textSize="@dimen/_16sp" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcvConvenient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10dp"
                    android:orientation="vertical"
                    android:overScrollMode="never" />

                <TextView
                    android:id="@+id/text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/anhdetail"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcvGallery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:overScrollMode="never" />

                <TextView
                    android:id="@+id/text5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/mapdetail"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150dp"
                    android:layout_marginTop="@dimen/_20dp"
                    app:cardCornerRadius="@dimen/_20dp"
                    app:cardElevation="@dimen/_0dp">

                    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:id="@+id/mapinfo"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:context=".ui.activity.DetailProductActivity" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20dp"
                    android:layout_marginBottom="@dimen/_10dp">

                    <ImageView
                        android:id="@+id/imgStar2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/ic_star_detailproduct" />

                    <TextView
                        android:id="@+id/tvCountSao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_5dp"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="#0A8ED9"
                        android:textSize="@dimen/_20sp" />

                    <TextView
                        android:id="@+id/btnDanhGia"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_12dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="#0A8ED9"
                        android:textSize="@dimen/_20sp" />

                    <TextView
                        android:id="@+id/btnShowFeedback"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center"
                        android:text="@string/see_more"
                        android:textColor="#0A8ED9"
                        android:textSize="@dimen/_16dp" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcvFeedback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/availabilitystatusdetail"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16sp" />

                    <TextView
                        android:id="@+id/statusHouse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="#0A8ED9"
                        android:textSize="@dimen/_14dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/houserulesdetail"
                        android:textSize="@dimen/_16sp" />

                    <TextView
                        android:id="@+id/opening"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5dp"
                        android:layout_marginTop="20dp"
                        android:textColor="#0A8ED9"
                        android:textSize="@dimen/_14dp" />

                    <TextView
                        android:id="@+id/ending"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5dp"
                        android:layout_marginTop="20dp"
                        android:textColor="#0A8ED9"
                        android:textSize="@dimen/_14dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/text8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/check_in"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sp" />

                <TextView
                    android:id="@+id/startDateAndEndDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="#0A8ED9"
                    android:textSize="@dimen/_16dp" />

                <TextView
                    android:id="@+id/text9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="@dimen/_10dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/Cancellationpolicydetail"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sp" />

                <TextView
                    android:id="@+id/legalHouse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="" />

<!--                <TextView-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginTop="20dp"-->
<!--                    android:layout_marginBottom="@dimen/_10dp"-->
<!--                    android:fontFamily="@font/poppins_medium"-->
<!--                    android:text="@string/Ytedetail"-->
<!--                    android:textColor="@color/black"-->
<!--                    android:textSize="@dimen/_16sp" />-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16dp"
                    android:layout_marginBottom="@dimen/_10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/Ytedetail"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16sp" />

                    <TextView
                        android:id="@+id/showMedical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:text="@string/see_more"
                        android:textColor="#0A8ED9"
                        android:textSize="@dimen/_16sp" />
                </LinearLayout>
                <TextView
                    android:id="@+id/text11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/Y_te_detail" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_130dp" />
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>


    <RelativeLayout
        android:id="@+id/contentBackgroundGradiend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="@dimen/_10dp"
        android:background="@drawable/gradientbackground_detailproduct"
        android:orientation="horizontal"
        android:paddingTop="@dimen/_10dp"
        android:paddingBottom="@dimen/_28dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/pricedetail"
                android:textColor="@color/color_858585"
                android:textSize="@dimen/_12dp" />

            <TextView
                android:id="@+id/priceRoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8dp"
                android:fontFamily="@font/poppins_medium"

                android:textColor="#0A8ED9"
                android:textSize="@dimen/_16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/btnRentNow"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_60dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/gradiendetailproduct"
            android:fontFamily="@font/poppins_medium"
            android:foreground="?android:attr/selectableItemBackground"
            android:paddingHorizontal="@dimen/_24dp"
            android:paddingVertical="@dimen/_12dp"
            android:text="@string/rentnowdetail"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sp"
            app:backgroundTint="@null" />
    </RelativeLayout>

</RelativeLayout>
