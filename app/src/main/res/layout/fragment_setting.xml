<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/background_color"
    android:orientation="vertical"
    tools:context=".ui.fragment.SettingFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <com.example.librarycireleimage.CircleImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:layout_weight="1"
            android:src="@drawable/ic_internet_language_settings"
            />

            <TextView
                android:layout_width="140dp"

                android:layout_weight="1"
                android:textColor="?attr/text_color"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="@string/LanguageSetting"/>

        <Spinner
            android:id="@+id/spinnerLanguage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="English"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <com.example.librarycireleimage.CircleImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:layout_weight="1"
            android:src="@drawable/ic_notification_settings"
            />

        <TextView
            android:layout_width="240dp"
            android:id="@+id/tvModeSettings"
            android:textColor="?attr/text_color"
            android:layout_weight="1"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="@string/DarkmodeSetting"/>



        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:thumb="@drawable/thumb_selector_settings"
            app:track="@drawable/track_selector"
            android:src="@drawable/ic_button_infor_setting"
            android:id="@+id/switchModeSettings"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <com.example.librarycireleimage.CircleImageView
            android:layout_width="25dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:src="@drawable/ic_help_settings"
            />

        <TextView
            android:layout_width="240dp"
            android:layout_weight="1"
            android:textColor="?attr/text_color"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/ChangePassSetting"/>

        <ImageView
            android:id="@+id/changePassSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_button_infor_setting"
            android:layout_gravity="center"/>
    </LinearLayout>
</LinearLayout>