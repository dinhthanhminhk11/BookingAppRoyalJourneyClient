<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contentBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_EBEBEB"
    android:orientation="vertical"
    tools:context=".ui.activity.Hotel.BookingActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/gradientbackground_white"
        app:titleTextColor="@color/black" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tool_bar"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/contentBackground1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradientbackground_white"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/_20dp"
                android:paddingVertical="@dimen/_10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nameHouse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20dp"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_18dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imsao1"
                            android:layout_width="@dimen/_20dp"
                            android:layout_height="@dimen/_20dp"
                            android:layout_marginRight="@dimen/_5dp"
                            android:src="@drawable/ic_star_1" />

                        <ImageView
                            android:id="@+id/imsao2"
                            android:layout_width="@dimen/_20dp"
                            android:layout_height="@dimen/_20dp"
                            android:layout_marginRight="@dimen/_5dp"
                            android:layout_toEndOf="@+id/imsao1"
                            android:src="@drawable/ic_star_1" />

                        <ImageView
                            android:id="@+id/imsao3"
                            android:layout_width="@dimen/_20dp"
                            android:layout_height="@dimen/_20dp"
                            android:layout_marginRight="@dimen/_5dp"
                            android:layout_toEndOf="@+id/imsao2"
                            android:src="@drawable/ic_star_1" />

                        <ImageView
                            android:id="@+id/imsao4"
                            android:layout_width="@dimen/_20dp"
                            android:layout_height="@dimen/_20dp"
                            android:layout_marginRight="@dimen/_5dp"
                            android:layout_toEndOf="@+id/imsao3"
                            android:src="@drawable/ic_star_1" />

                        <ImageView
                            android:id="@+id/imsao5"
                            android:layout_width="@dimen/_20dp"
                            android:layout_height="@dimen/_20dp"
                            android:layout_toEndOf="@+id/imsao4"
                            android:src="@drawable/ic_star_1" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15dp" />

                    <TextView
                        android:id="@+id/startDateAndEndDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5dp"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/_15dp" />
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_15dp">

                    <ImageView
                        android:id="@+id/imageHouse"
                        android:layout_width="@dimen/_100dp"
                        android:layout_height="@dimen/_100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/anh5" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/contentContentHotel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:background="@drawable/gradientbackground_white"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/_15dp"
                android:paddingVertical="@dimen/_10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thông tin phòng"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/nameRoom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:text="Phòng 1"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_bed_outline" />

                    <TextView
                        android:id="@+id/tvSoGiuong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:text="2 Giường đơn, 1 giường Queen "
                        android:textColor="@color/black" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/contentPayDayNight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:background="@drawable/gradientbackground_white"
                android:foreground="?attr/selectableItemBackground"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/_20dp"
                android:paddingVertical="@dimen/_10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/open_time_status_bill"
                        android:textColor="@color/color_858585" />

                    <TextView
                        android:id="@+id/startDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16dp" />

                    <TextView
                        android:id="@+id/tvTimeNhanPhong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_858585" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/contentPayDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/background_night"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5dp">

                    <TextView
                        android:id="@+id/payDay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_16dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:src="@drawable/ic_baseline_mode_night_24" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnChonNgayTra"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|right"
                        android:text="@string/close_time_status_bill"
                        android:textColor="@color/color_858585" />

                    <TextView
                        android:id="@+id/endDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|right"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16dp" />

                    <TextView
                        android:id="@+id/tvTimeTra"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|right"
                        android:textColor="@color/color_858585" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/contentLayoutCountRoom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradientbackground_white"
                android:foreground="?attr/selectableItemBackground"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/_20dp"
                android:paddingVertical="@dimen/_10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/countRoom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Số lượng phòng"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textCountRoom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5dp"
                        android:text="Nhập số lượng phòng thuê" />

                </LinearLayout>

                <TextView
                    android:id="@+id/editCountRoom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="@string/edit_person"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/contentEditPerson"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradientbackground_white"
                android:foreground="?attr/selectableItemBackground"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/_20dp"
                android:paddingVertical="@dimen/_10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/personLimitHouse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/guest"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/person"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5dp"
                        android:text="@string/limitperson" />

                </LinearLayout>

                <TextView
                    android:id="@+id/editPerson"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="@string/edit_person"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/contentPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:background="@drawable/gradientbackground_white"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/_20dp"
                android:paddingVertical="@dimen/_10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/option_phone"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_16dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5dp"
                            android:text="@string/nullphone" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/addPhone"
                        android:layout_width="@dimen/_80dp"
                        android:layout_height="@dimen/_40dp"
                        android:layout_gravity="center"
                        android:background="@drawable/textview_border_black"
                        android:foreground="?attr/selectableItemBackground"
                        android:text="@string/Add"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        app:backgroundTint="@null" />
                </LinearLayout>

                <EditText
                    android:id="@+id/edPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20dp"
                    android:background="@drawable/textview_border_ver2"
                    android:hint="@string/option_phone"
                    android:inputType="number"
                    android:paddingHorizontal="@dimen/_10dp"
                    android:paddingVertical="@dimen/_10dp"
                    android:textSize="@dimen/_18dp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btnComfirmPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="@dimen/_20dp"
                    android:background="@drawable/textview_border_black"
                    android:foreground="?attr/selectableItemBackground"
                    android:text="@string/continue_phone"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:visibility="gone"
                    app:backgroundTint="@null" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/contentLayoutYeuCauThem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:background="@drawable/gradientbackground_white"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/_20dp"
                android:paddingVertical="@dimen/_10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Yêu cầu thêm"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_16dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textMore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5dp"
                            android:text="Nhập yêu cầu của bạn" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/addYeuCauThem"
                        android:layout_width="@dimen/_80dp"
                        android:layout_height="@dimen/_40dp"
                        android:layout_gravity="center"
                        android:background="@drawable/textview_border_black"
                        android:foreground="?attr/selectableItemBackground"
                        android:text="@string/Add"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        app:backgroundTint="@null" />
                </LinearLayout>

                <EditText
                    android:id="@+id/edYeuCauThem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20dp"
                    android:background="@drawable/textview_border_ver2"
                    android:ems="10"
                    android:gravity="left|top"
                    android:hint="Nhập yêu cầu của bạn"
                    android:inputType="textMultiLine"
                    android:lines="8"
                    android:maxLines="10"
                    android:minLines="6"
                    android:paddingHorizontal="@dimen/_10dp"
                    android:paddingVertical="@dimen/_10dp"
                    android:scrollbars="vertical"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btnComfirmYeuCauThem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="@dimen/_20dp"
                    android:background="@drawable/textview_border_black"
                    android:foreground="?attr/selectableItemBackground"
                    android:text="Xác nhận"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:visibility="gone"

                    app:backgroundTint="@null" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/contentBackground3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:background="@drawable/gradientbackground_white"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/_20dp"
                android:paddingVertical="@dimen/_10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/text9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/info_bill"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16dp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:id="@+id/text9CountRoom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/priceAndCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5dp"
                        android:text=""
                        android:textSize="@dimen/_17sp" />

                    <TextView
                        android:id="@+id/sumPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5dp"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text=""
                        android:textSize="@dimen/_17sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5dp"
                        android:text="@string/service_charge"
                        android:textSize="@dimen/_17sp" />

                    <TextView
                        android:id="@+id/priceSupperLine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5dp"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="$0"
                        android:textColor="@color/green"
                        android:textSize="@dimen/_17sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5dp"
                        android:text="@string/sum"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/priceAll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5dp"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/_17sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/contentBackground2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:background="@drawable/gradientbackground_white"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/_20dp"
                android:paddingVertical="@dimen/_10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/contentPayOnline"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:foreground="?attr/selectableItemBackground"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/text1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/Online_payment"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_16dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/text2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5dp"
                                android:text="@string/textOnline_payment" />

                        </LinearLayout>

                        <RadioButton
                            android:id="@+id/payOnline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_10dp"
                            android:buttonTint="@color/black"
                            android:gravity="center" />
                    </LinearLayout>

                    <View
                        android:id="@+id/contentPayOfflineLine"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_05dp"
                        android:layout_marginTop="@dimen/_20dp"
                        android:background="@color/color_858585" />

                    <LinearLayout
                        android:id="@+id/contentPayOffline"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20dp"
                        android:foreground="?attr/selectableItemBackground"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/text3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/Direct_payment"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_16dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/text4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5dp"
                                android:text="@string/textDirect_payment" />

                        </LinearLayout>

                        <RadioButton
                            android:id="@+id/payOffline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_10dp"
                            android:buttonTint="@color/black"
                            android:gravity="center" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/contentPayment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:background="@drawable/gradientbackground_white"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/_20dp"
                android:paddingVertical="@dimen/_10dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Pay_with"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16dp"
                        android:textStyle="bold" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10dp"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="1dp"
                            android:background="@drawable/background_icon_payment"
                            android:elevation="3dp">

                            <ImageView
                                android:id="@+id/icon_changepass"
                                android:layout_width="@dimen/_24dp"
                                android:layout_height="@dimen/_24dp"
                                android:layout_margin="@dimen/_5dp"
                                android:src="@drawable/ic_payment_svgrepo_com" />
                        </LinearLayout>


                        <ImageView
                            android:id="@+id/imageMatercard"
                            android:layout_width="@dimen/_35dp"
                            android:layout_height="@dimen/_25dp"
                            android:layout_marginLeft="@dimen/_10dp"
                            android:src="@drawable/ic_mastercard"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/imagePaypal"
                            android:layout_width="@dimen/_35dp"
                            android:layout_height="@dimen/_25dp"
                            android:layout_marginLeft="@dimen/_10dp"
                            android:src="@drawable/ic_paypal"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/imageGooglePlay"
                            android:layout_width="@dimen/_35dp"
                            android:layout_height="@dimen/_25dp"
                            android:layout_marginLeft="@dimen/_10dp"
                            android:src="@drawable/ic_googlepay"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/textPayment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_10dp"
                            android:text="Ví RoyalJourneySuper Account" />
                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/addPayment"
                    android:layout_width="@dimen/_80dp"
                    android:layout_height="@dimen/_40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/textview_border_black"
                    android:foreground="?attr/selectableItemBackground"
                    android:text="@string/Add"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:visibility="gone"
                    app:backgroundTint="@null" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/contentCancellationPolicy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:background="@drawable/gradientbackground_white"
                android:foreground="?attr/selectableItemBackground"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/_20dp"
                android:paddingVertical="@dimen/_10dp">

                <TextView
                    android:id="@+id/text12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Exactly_cancel"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5dp"
                    android:text="@string/textExactly_cancel" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/contentBackground4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:background="@drawable/gradientbackground_white"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/_20dp"
                android:paddingVertical="@dimen/_10dp">

                <TextView
                    android:id="@+id/text13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5dp"
                    android:text="@string/text_comfirm_status_bill" />

                <Button
                    android:id="@+id/btnPay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="@dimen/_20dp"
                    android:background="@drawable/bg_buttom_black"
                    android:foreground="?attr/selectableItemBackground"
                    android:text="@string/Confirmation_and_payment"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    app:backgroundTint="@null" />

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_120dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:backgroundTint="@null"
        android:backgroundTintMode="@null"
        android:visibility="gone"
        app:lottie_autoPlay="true"
        app:lottie_fileName="loading.json"
        app:lottie_loop="true" />

</RelativeLayout>