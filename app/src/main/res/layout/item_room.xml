<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_130dp"
    android:layout_height="@dimen/_130dp"
    android:layout_marginRight="@dimen/_20dp"
    android:background="@drawable/background_border_feedback"
    >

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/room"
            android:layout_width="@dimen/_24dp"
            android:layout_height="@dimen/_24dp"
            android:layout_marginLeft="@dimen/_10dp"
            android:layout_marginTop="@dimen/_10dp"
            android:src="@drawable/ic_room_detailproduct" />

        <TextView
            android:id="@+id/room1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/room"
            android:layout_marginLeft="@dimen/_10dp"
            android:layout_marginTop="@dimen/_10dp"
            android:fontFamily="@font/poppins_medium"
            android:maxLines="1"
            android:text="Room"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sp" />

        <TextView
            android:id="@+id/room2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/room1"
            android:layout_marginLeft="@dimen/_10dp"
            android:layout_marginRight="@dimen/_5dp"
            android:layout_marginBottom="@dimen/_5dp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/room_detailproduct"
            android:textSize="@dimen/_10sp"
            android:textStyle="normal" />


    </RelativeLayout>

</RelativeLayout>